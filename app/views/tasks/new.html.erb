<h1>Add Task</h1>

<form action="/tasks" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-field">
    <label for="task[title]">Title</label>
    <input type="text" name="task[title]">
  </div>
  <div class="form-field">
    <label for="task[details]">Details</label>
    <input type="text" name="task[details]">
  </div>
  <div class="form-field">
    <label for="task[completed]">Completed ?</label>
    <input type="text" name="task[completed]">
  </div>
  <input type="submit">
</form>

<div class="btn-link">
  <%= link_to "Back to tasks list", tasks_path %>
</div>
