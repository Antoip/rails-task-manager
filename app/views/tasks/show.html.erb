<h1><%= @task.title %></h1>

<p>
  <%= @task.details %>
</p>
<div class="completion">
  <p>Completed ? </p>
  <p class="<%= @task.completed ? "text-green" : "text-red" %>"><%= @task.completed.to_s %></p>
</div>

<div class="btn-link">
  <%= link_to "Edit Task", edit_task_path(@task) %>
</div>

<div class="btn-link">
  <%= link_to "Back to tasks list", tasks_path %>
</div>
